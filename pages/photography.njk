{% extends 'layouts/base.njk' %}

{% block menu %}
	<span class="message">Photos I’ve taken over the years.</span>
{% endblock %}

{% block content %}
	<section class="photography-grid">
		<ul class="grid-isotope">
			{% for photo in photography %}
				<li class="grid-item {{photo.tags|isoFilter}}">
					<figure role="group" aria-label="Photo, {{photo.location}}">
						{% image './static/images/photography/' + photo.date + '-' + photo.name + '.jpg', photo.location, photo.aspect, 'full', 'photography' %}
						<figcaption>
							<fieldset>
								<input class="grid-input" id="{{photo.date|safe}}-{{photo.name}}" type="checkbox" tabindex="0" aria-label="Show information about this photo"/>
								<label class="grid-close" for="{{photo.date|safe}}-{{photo.name}}"></label>
								<label class="grid-link" for="{{photo.date|safe}}-{{photo.name}}">{% include 'svg/icons/info.svg' %}</label>
								<div class="grid-info">
									<label class="grid-down" for="{{photo.date|safe}}-{{photo.name}}">{% include 'svg/icons/caret-down.svg' %}</label>
									<dl>
										<div>
											<dt>Date</dt><dd>{{photo.date|readableDataDate}}</dd>
										</div>
										<div>
											<dt>Location</dt><dd>{{photo.location}}</dd>
										</div>
										<div>
											<dt>Camera</dt><dd>{{photo.camera}}</dd>
										</div>
										<div>
											<dt>Editor</dt><dd>{{photo.editor}}</dd>
										</div>
									</dl>
									<a class="grid-external" target="_blank" href="/static/images/photography/{{photo.date|safe}}-{{photo.name}}.jpg" tabindex="-1">{% include 'svg/icons/external.svg' %}</a>
								</div>
							</fieldset>
						</figcaption>
					</figure>
				</li>
			{% endfor %}
		</ul>
	</section>
	<nav class="grid-filters" aria-label="Tags List">
		<input id="grid-filters" type="checkbox" tabindex="0" aria-label="Show tags"/>
		<h2><label for="grid-filters"><span>Tags</span></label></h2>
		<ul>
			<li><a class="grid-filter" href="#" data-filter=".filter-portrait">#portrait</a></li>
			<li><a class="grid-filter" href="#" data-filter=".filter-landscape">#landscape</a></li>
			<li><a class="grid-filter" href="#" data-filter=".filter-indoor">#indoor</a></li>
			<li><a class="grid-filter" href="#" data-filter=".filter-outdoor">#outdoor</a></li>
			<li><a class="grid-filter" href="#" data-filter=".filter-people">#people</a></li>
			<li><a class="grid-filter reset" href="#" data-filter="*">reset</a></li>
		</ul>
	</nav>
{% endblock %}