---

{% extends 'layouts/base.njk' %}

{% block menu %}
	<span class="message">I like to draw things.</span>
{% endblock %}

{% block content %}
	<section class="graphic-grid">
		<ul class="grid-isotope">
			{% for art in art %}
				<li class="grid-item {{art.tags|isoFilter}}">
					<figure role="group" aria-label="Art, {{art.title}}">
						{% image './static/images/art/' + art.date + '-' + art.name + '.jpg', art.title, art.aspect, 'full', 'art' %}
						<figcaption>
							<fieldset>
								<input class="grid-input" id="{{art.date|safe}}-{{art.name}}" type="checkbox" tabindex="0" aria-label="Show information about this art"/>
								<label class="grid-close" for="{{art.date|safe}}-{{art.name}}"></label>
								<label class="grid-link" for="{{art.date|safe}}-{{art.name}}">{% include 'svg/icons/info.svg' %}</label>
								<div class="grid-info">
									<label class="grid-down" for="{{art.date|safe}}-{{art.name}}">{% include 'svg/icons/caret-down.svg' %}</label>
									<dl>
										<div>
											<dt class="title">Title</dt><dd>{{art.title}}</dd>
										</div>
										<div>
											<dt>Date</dt><dd>{{art.date|readableDataDate}}</dd>
										</div>
										<div>
											<dt>Tools</dt><dd>{{art.tools}}</dd>
										</div>
									</dl>
									<a class="grid-external" target="_blank" href="/static/images/graphic/{{art.date|safe}}-{{art.name}}.png" tabindex="-1">{% include 'svg/icons/external.svg' %}</a>
								</div>
							</fieldset>
						</figcaption>
					</figure>
				</li>
			{% endfor %}
		</ul>
	</section>
	<nav class="grid-filters" aria-label="Tags List">
		<input id="grid-filters" type="checkbox" tabindex="0" aria-label="Show tags"/>
		<h2><label for="grid-filters"><span>Tags</span></label></h2>
		<ul>
			<li><a class="grid-filter" href="#" data-filter=".filter-digital">#digital</a></li>
			<li><a class="grid-filter" href="#" data-filter=".filter-traditional">#traditional</a></li>
			<li><a class="grid-filter" href="#" data-filter=".filter-figure">#figure drawing</a></li>
			<li><a class="grid-filter reset" href="#" data-filter="*">reset</a></li>
		</ul>
	</nav>
{% endblock %}