<section class="posts-container">
	<article class="posts-archive">
		{% for year, posts in collections.writing | groupby("data.year") | dictsort | reverse %}
			<h2 data-anim>{{year}}</h2>
			<ul>
				{% for post in posts | reverse %}
					<li data-anim>
						<h3><a href="{{post.url|url}}"><span>{{post.data.title|safe}}</span></a></h3>
						<time datetime="{{post.date|ISO|date('string')}}">{{post.date|ISO|date('readable')}}</time>
					</li>
				{% endfor %}
			</ul>
		{% endfor %}
	</article>
</section>

